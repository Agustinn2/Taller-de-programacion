programa ejercicio3
procesos
  proceso recogerPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso recorrerEtapa 
  comenzar
    si(PosCa = 1)
      repetir 4
        recogerPapeles
        mover
      recogerPapeles
    sino
      repetir 5  
        recogerPapeles
        mover
      recogerPapeles
  fin
areas
  areaR1: AreaP (1,1,1,100)
  areaR2: AreaP (2,1,2,100)
  areaR3: AreaP (3,1,3,100)
  areaCoordinador: AreaP (4,1,4,1)
robots
  robot trabajadores
  variables
    ID:numero
    finalice:boolean
  comenzar
    RecibirMensaje(ID, r0)
    repetir 20
      recorrerEtapa
      si(ID = 1)
        EnviarMensaje(V,r2)
        EnviarMensaje(V,r3) 
      sino  
        si(ID = 2)
          EnviarMensaje(V,r3)
          EnviarMensaje(V,r1)
        sino
          EnviarMensaje(V,r1)
          EnviarMensaje(V,r2)
      repetir 2
        RecibirMensaje(finalice,*)
  fin
  robot coordinador
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  r1,r2,r3: trabajadores
  r0:coordinador
comenzar
  AsignarArea(r1, areaR1)
  AsignarArea(r2, areaR2)
  AsignarArea(r3, areaR3)
  AsignarArea(r0, areaCoordinador)
  Iniciar(r1, 1,1)
  Iniciar(r2, 2,1)
  Iniciar(r3, 3,1)
  Iniciar(r0, 4,1)
fin