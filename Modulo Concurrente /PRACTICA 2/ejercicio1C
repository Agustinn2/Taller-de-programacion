programa ejercicio1A
procesos
  proceso recogerFlores(ES cantFlores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlores:= cantFlores + 1
  fin
  proceso recorrerAvenida(ES cantFlores:numero)
  comenzar
    repetir 9
      recogerFlores(cantFlores)
      mover
    recogerFlores(cantFlores)
  fin
areas
  areaR1: AreaP (1,1,1,10)
  areaR2: AreaP(2,11,2,20)
  areaR3: AreaP(3,21,3,30)
  areaR4: AreaP(4,31,4,40)
  areaR5: AreaP(5,41,5,50)
  areaR6: AreaP(6,51,6,60)
  areaR7: AreaP(2,1,2,1)
robots
  robot robot1
  variables
    cantFlores:numero
  comenzar
    cantFlores:= 0
    recorrerAvenida(cantFlores)
    EnviarMensaje(cantFlores,r7)
  fin
  robot jefe
  variables 
    auxCant, maxCant:numero
  comenzar
    maxCant:= -1
    repetir 6
      RecibirMensaje(auxCant, *)
      si(auxCant > maxCant)
        maxCant := auxCant 
    Informar("Cantidad del robott ganador ", maxCant)
  fin
variables
  r1,r2,r3,r4,r5,r6: robot1
  r7: jefe
comenzar
  AsignarArea(r1, areaR1)
  AsignarArea(r2, areaR2)
  AsignarArea(r3, areaR3)  
  AsignarArea(r4, areaR4) 
  AsignarArea(r5, areaR5) 
  AsignarArea(r6, areaR6) 
  AsignarArea(r7, areaR7) 
  Iniciar(r1, 1, 1)
  Iniciar(r2, 2,11)
  Iniciar(r3, 3,21)
  Iniciar(r4, 4,31)
  Iniciar(r5, 5,41)
  Iniciar(r6, 6,51)
  Iniciar(r7, 2,1)
fin