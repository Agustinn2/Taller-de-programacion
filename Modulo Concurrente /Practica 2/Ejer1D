programa Ejer1D
procesos
  proceso limpiarFlores(ES cant:numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      cant:=cant+1
  fin
  proceso recorrerAvenida(ES cant:numero)
  comenzar
    repetir 9
      limpiarFlores(cant)
      mover
    limpiarFlores(cant)
  fin
areas
  AreaR1 : AreaP (1,1,1,10)
  AreaR2 : AreaP (2,11,2,20)
  AreaR3 : AreaP (3,21,3,30)
  AreaR4 : AreaP (4,31,4,40)
  AreaR5 : AreaP (5,41,5,50)
  AreaR6 : AreaP (6,51,6,60)
  AreaJefe: AreaP (2,1,2,1)
robots
  robot competidores
  variables
    cant:numero
    ID:numero
  comenzar
    cant:=0
    RecibirMensaje(ID, r0)
    recorrerAvenida(cant)
    EnviarMensaje(ID, r0)
    EnviarMensaje(cant,r0)
  fin
  robot fizcalizador
  variables
    auxCant:numero
    maxCant,ganador:numero
    ID:numero
  comenzar
    maxCant:=-1
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    EnviarMensaje(4,r4)
    EnviarMensaje(5,r5)
    EnviarMensaje(6,r6)
    repetir 6
      RecibirMensaje(ID, *)
      si(ID = 1)
        RecibirMensaje(auxCant, r1)
      sino
        si(ID = 2)
          RecibirMensaje(auxCant,r2)
        sino
          si(ID = 3)
            RecibirMensaje(auxCant,r3)
          sino
            si(ID = 4)
              RecibirMensaje(auxCant,r4)
            sino
              si(ID = 5)
                RecibirMensaje(auxCant,r5)
              sino
                RecibirMensaje(auxCant,r6)
      si(auxCant > maxCant)
        maxCant:= auxCant
        ganador:= ID
    Informar("robot_ganador",ganador)
    Informar("cant",maxCant)
  fin
variables
  r1,r2,r3,r4,r5,r6: competidores
  r0: fizcalizador
comenzar
  AsignarArea(r0,AreaJefe)
  AsignarArea(r1,AreaR1)
  AsignarArea(r2,AreaR2)
  AsignarArea(r3,AreaR3)
  AsignarArea(r4,AreaR4)
  AsignarArea(r5,AreaR5)
  AsignarArea(r6,AreaR6)
  Iniciar(r0,2,1)
  Iniciar(r1, 1,1)
  Iniciar(r2, 2,11)
  Iniciar(r3, 3,21)
  Iniciar(r4, 4,31)
  Iniciar(r5, 5,41)
  Iniciar(r6, 6,51)  
fin
